<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="pl.damiandziura.milionerzy.activities.MainGameActivity">

    <TextView
        android:id="@+id/dummyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/lblQuestion"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dummyview"
        android:background="@drawable/question"
        android:editable="false"
        android:ems="10"
        android:gravity="center"
        android:inputType="none"
        android:padding="30dp"
        android:paddingBottom="30dp"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@color/black_overlay"
        android:textColorHint="@color/black_overlay"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btProgressBoard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/more"
        android:onClick="onProgressBoardActivity" />

    <Button
        android:id="@+id/btOptions"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/options"
        android:onClick="onOptionsActivity" />

    <Button
        android:id="@+id/btEndGame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/question"
        android:onClick="onEndGameActivity"
        android:text="@string/EndGame"
        android:visibility="invisible"
        android:layout_above="@+id/lblQuestion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/dummyview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dummyview"
        android:layout_below="@+id/lblQuestion"
        android:background="@drawable/question"
        android:onClick="onAnswer1"
        android:padding="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/btAnswer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btAnswer1"
        android:layout_below="@+id/btAnswer1"
        android:background="@drawable/question"
        android:onClick="onAnswer3"
        android:padding="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblQuestion"
        android:layout_toRightOf="@+id/dummyview"
        android:background="@drawable/question"
        android:onClick="onAnswer2"
        android:padding="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btAnswer4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btAnswer1"
        android:layout_toRightOf="@+id/btAnswer1"
        android:background="@drawable/question"
        android:onClick="onAnswer4"
        android:padding="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

</android.widget.RelativeLayout>
